<div class="C_Pagination">
	<div class="C_Pagination_prev <%= (currentPage === 1) ? 'disable' : ''%>">Prev</div>
	
	<% for(var i = 1; i <= totalPages; i++) { %>
		<div class="C_Pagination_item <%= (i === currentPage) ? 'current' : ''%>"><%= i %></div>
	<% } %>

	<div class="C_Pagination_next <%= (currentPage === totalPages) ? 'disable' : ''%>">Next</div>

	<div class="C_Pagination_goto">
		<div class="C_Pagination_goto_text"></div>
		<div class="C_Pagination_goto_button"></div>
	</div>
</div>